<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <TextView
        android:id="@+id/dateDebut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2C3E50"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        tools:text="Pseudo"
        />

    <TextView
        android:id="@+id/dureePrevu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/dateDebut"
        android:layout_below="@+id/dateDebut"
        tools:text="Texte de mon tweet"
        />

    <TextView
        android:id="@+id/immatriculaion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/dureePrevu"
        android:layout_below="@+id/dureePrevu"
        tools:text="Texte de mon tweet"
        />
    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/immatriculaion"
        android:layout_below="@+id/immatriculaion"
        tools:text="Texte de mon tweet"
        />

</RelativeLayout>

